<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30pt"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="9"
        android:layout_toEndOf="@id/calcResult"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp"
        android:layout_marginTop="30pt"
        android:text="8"
        android:onClick="onNumberClick"
        android:layout_toEndOf="@id/button9"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:onClick="onNumberClick"
        android:text="7"
        android:layout_marginTop="30pt"
        android:layout_toEndOf="@id/button8"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="6"
        android:layout_below="@id/button9"
        android:layout_toEndOf="@id/calcResult"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="5"
        android:onClick="onNumberClick"
        android:layout_toEndOf="@id/button6"
        android:layout_below="@id/button8"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_marginStart="10dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="4"
        android:layout_toEndOf="@id/button5"
        android:layout_below="@id/button7"
        app:cornerRadius="15dp"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="3"
        android:layout_below="@id/button6"
        android:layout_toEndOf="@id/calcResult"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="2"
        android:layout_toEndOf="@id/button3"
        android:layout_below="@id/button5"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="onNumberClick"
        android:text="1"
        android:layout_toEndOf="@id/button2"
        android:layout_below="@id/button4"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:onClick="onNumberClick"
        android:text="0"
        android:layout_below="@id/button2"
        android:layout_toEndOf="@id/buttonAC"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button3"
        android:layout_marginStart="50dp"
        android:onClick="clearMemory"
        android:text="AC"
        android:textSize="10sp"
        android:layout_toEndOf="@id/calcResult"
        app:cornerRadius="15dp" />

    <Button
        android:id="@+id/buttonPlus"
        android:background="@drawable/operator_buttons"
        android:textSize="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30pt"
        android:onClick="onOperatorClick"
        android:text="+"
        android:layout_toEndOf="@id/button7"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/buttonMinus"
        android:background="@drawable/operator_buttons"
        android:textSize="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="onOperatorClick"
        android:text="-"
        android:layout_below="@id/buttonPlus"
        android:layout_toEndOf="@id/button4"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:background="@drawable/operator_buttons"
        android:textSize="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="onOperatorClick"
        android:text="*"
        android:layout_below="@id/buttonMinus"
        android:layout_toEndOf="@id/button1"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/buttonDivide"
        android:background="@drawable/operator_buttons"
        android:textSize="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonMultiply"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/buttonEqual"
        android:onClick="onOperatorClick"
        android:text="/"
        app:cornerRadius="15dp"/>

    <TextView
        android:id="@+id/calcResult"
        android:background="@drawable/backtext"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="viewEnd"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/previousNum"
        android:text="@string/result"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="60dp"
        android:layout_marginStart="10dp"
        android:layout_height="60dp"
        android:text="="
        android:layout_below="@id/button1"
        android:layout_toEndOf="@id/button0"
        android:onClick="computeExpression"
        app:cornerRadius="15dp"/>

    <TextView
        android:id="@+id/previousNum"
        android:background="@drawable/prev_text"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="40pt"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>